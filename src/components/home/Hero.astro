---
// Astro tools
import { Image } from "astro:assets";

// Components
import Heading from "@/components/ui/Heading.astro";
import Link from "@/components/ui/Link.astro";

// Assets
import peter from "@/assets/avatar.jpg"
---

<header aria-label="Introduction to Peter" class="hero-home">
  <Image 
    src={peter}
    alt="Peter's avatar"
    width={200}
    class="avatar"
    format="avif"
  />
  <Heading tagName="h1" size="h2">👋🏻 Hi, I'm Peter</Heading>
  <p>I'm a self-taught developer (with a design background), obsessed with detail.</p>
  <div>
    <Link href="#" variant="secondary">Download CV</Link>
    <Link href="#contact">Let's Connect</Link>
  </div>
</header>
